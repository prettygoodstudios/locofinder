<%= form_for(location ,url: path ) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>
  <%= f.hidden_field :user, value: current_user.id  %>
  <%= f.submit %>
<% end %>
