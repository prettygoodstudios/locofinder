<div class="container">
  <div class="row">
    <h1><%= @location.title %></h1>
    <p><%= @location.address + ", " + @location.city + ", " + @location.state + ", " + @location.country %></p>
    <% if @location.user_id.to_i == current_user.id %>
      <%= link_to "Edit", edit_location_path(@location), class: "button" %>
      <%= link_to "Delete", location_path(@location), method: :delete, class: "button" %>
    <% end %>
    <%= link_to "Add Photo", new_photo_path + "/?location=#{@location.id}&user=#{current_user.id}", class: "button" %>
  </div>
  <div class="row">
    <iframe
      width="100%"
      height="450"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDeRKNH5CbjJ2s2d19a3WYR-lYQQ6b3eUU
        &q=<%= @friendly_address %>" allowfullscreen>
    </iframe>
  </div>
</div>
<%= render partial: "photo/collection", locals: {location: @location, title: "Photos"} %>
<%= render partial: "review/reviews", locals: {review: @review, reviews: @reviews, location: @location, user: current_user} %>
