<div class="container">
  <h1>Reported Content</h1>
  <table class="u-full-width">
    <thead>
      <tr>
        <th colspan="3">Message</th>
        <th>Type</th>
        <th>User</th>
        <th>Link</th>
        <th>Resolve</th>
      </tr>
    </thead>
    <tbody>
      <% @reports.each do |r| %>
        <tr>
          <td colspan="3"><%= r.message %></td>
          <td><%= r.what_type %></td>
          <td><%= link_to(r.user.email, "/user/show/"+r.user.slug) if r.user != nil %></td>
          <td><%= link_to "View", r.link %></td>
          <td><%= link_to "Resolve", r %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
