<div class="container">
  <hr>
  <br>
  <% if signed_in? %>
    <h3>Submit A Review</h3>
    <h5>User: <%= current_user.email %></h5>
    <%= form_for(review, url: review_index_path ) do |f| %>
      <div class="form-group">
        <%= f.label :score %>
        <%= f.number_field :score %>
      </div>
      <div>
        <%= f.label :message %>
        <%= f.text_area :message, rows: 5 %>
      </div>
      <%= f.hidden_field :location, value: location.id %>
      <%= f.hidden_field :user, value: current_user.id %>
      <br>
      <%= f.submit "Post Review!" %>
    <% end %>
  <% end %>
  <h3>Reviews</h3>
  <table class="u-full-width">
    <thead>
      <tr>
        <th>User</th>
        <th>Score</th>
        <th>Message</th>
      </tr>
    </thead>
    <tbody>
      <% reviews.each do |r| %>
        <tr>
          <td><%= User.find(r.user_id).email %></td>
          <td><%= r.score %>/10</td>
          <td><%= r.message %>
          <% if signed_in? %>
            <%= link_to("Edit", edit_review_path(r), class: 'button') if r.is_mine(current_user.id) %><%= link_to("Delete", review_path(r), method: :delete, class: 'button') if r.is_mine(current_user.id) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
